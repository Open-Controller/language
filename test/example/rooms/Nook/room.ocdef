import "../../controller-templates/Roku.ocdef" as roku
import "../../controller-templates/FiOS.ocdef" as fios
import "./devices.ocdef" as devices

room {
    displayName "Nook"
    icon "NOOK"
    controllers {
        @nookRoku (roku 
            "Nook Roku"
            devices["centralRoku"]
            devices["nookTV"]
            devices["centralMatrix"]
            "1"
            "2"
            devices["centralAudioReceiver"]
            "2"
            "DVD"
        )
        @nookFiOS (fios
            "Nook FiOS"
            devices["centralFiOS"]
            devices["nookTV"]
            devices["centralMatrix"]
            "1"
            "1"
            devices["centralAudioReceiver"]
            "2"
            "Cable"
        )
    }
}